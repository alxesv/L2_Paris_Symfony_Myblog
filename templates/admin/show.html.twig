
{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ app.user.username }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ "Username"|trans }}</th>
            <td>{{ app.user.username }}</td>
        </tr>
        <tr>
        <tr>
            <th>{{ "Email"|trans }}</th>
            <td>{{ app.user.email }}</td>
        </tr>
        <tr>
            <th>{{ "Creation Date"|trans }}</th>
            <td>{{ app.user.createdAt ? app.user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="card__operations">
        <a href="{{ path('app_admin_edit', {'id': app.user.id}) }}">
            <button type="button" class="operation__button operation__button--edit">
                {{ "Edit"|trans }}
            </button>
        </a>
        {{ include('admin/_delete_form.html.twig') }}
    </div>


{% endblock %}
