
{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ app.user.username }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ app.user.username }}</td>
        </tr>
        <tr>
        <tr>
            <th>Email</th>
            <td>{{ app.user.email }}</td>
        </tr>
        <tr>
            <th>Creation date</th>
            <td>{{ app.user.createdAt ? app.user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_edit', {'id': app.user.id}) }}" class="btn btn-primary">edit</a>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
