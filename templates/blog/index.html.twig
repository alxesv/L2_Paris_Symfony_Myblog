{% extends 'base.html.twig' %}

{% block title %}Best blog ever{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper text-center">
    {% for message in app.flashes('message') %}
        <p class="flash__message">{{ message }}</p>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <p class="flash__error">{{ message }}</p>
    {% endfor %}
    <h1>Welcome</h1>
<div class="container-fluid dflex">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Front</h5>
            <a href="{{ path("app_blog") }}" class="btn btn-primary">Enter</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Back</h5>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path("app_post") }}" class="btn btn-primary">Enter</a>
            {% else %}
                <span style="font-size: 14px">Login as admin</span>
            {% endif %}
        </div>
    </div>
</div>
    {% if app.user %}
        <p>Logged in as {{ app.user.username }}</p>
        <a href="{{ path("app_logout") }}">Logout</a>
    {% else %}
        <p>Not logged in</p>
        <a href="{{ path("app_register") }}">Register</a>
        <a href="{{ path("app_login") }}">Login</a>
    {% endif %}
</div>
{% endblock %}
