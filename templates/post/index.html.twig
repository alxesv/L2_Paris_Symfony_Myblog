    <a href="{{ path('app_post_create')}}">Create</a>

    {# DEBUT BARRE DE RECHERCHE #}
    {# FIN BARRE DE RECHERCHE #}

    {# DEBUT LISTE POSTS #}
    {% for post in posts %}
        <div class="card">
            <div class="card__content">
                <a href="#" class="card__hypertext">{{ post.title }}</a>
                <p class="card__text">{{ post.summary }}</p>
                <p class="card__date">{{ post.getCreatedAt()|date('Y-m-d H:i:s')}}</p>
            </div>
            <img src="#" alt="#" class="card__photo">
            <td><a href="{{ path('app_post_show', {'id': post.id}) }}">DÃ©tail</a></td>
