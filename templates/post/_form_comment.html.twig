{{ form_start(form, {method: 'POST', action: path('app_add_comment', {'postId':post.id})}) }}


<fieldset>
    <legend>
        <i class="fa fa-comment" aria-hidden="true"></i> {{ 'Add comment'|trans }}
    </legend>
    {{ form_errors(form) }}

    <div class="form-group comment-form {% if not form.content.vars.valid %}has-error{% endif %}">
        {{ form_label(form.content, 'label.content', {label_attr: {class: 'sr-only'}}) }}
        {{ form_errors(form.content) }}

        {{ form_widget(form.content, {attr: {rows: 10}}) }}
        {{ form_help(form.content) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary float-right" type="submit">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> {{ 'Publish comment'|trans }}
        </button>
    </div>
</fieldset>
{{ form_end(form) }}